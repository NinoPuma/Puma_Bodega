<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- BotÃ³n de regreso -->
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_back"
        android:layout_marginBottom="12dp"/>

    <!-- Estado del Pedido -->
    <TextView
        android:id="@+id/tvEstadoPedidoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Estado del Pedido"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="8dp"/>

    <!-- Fecha del Pedido -->
    <TextView
        android:id="@+id/tvFechaPedidoDetalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha del Pedido"
        android:textSize="16sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginBottom="12dp"/>

    <!-- Lista de productos en el pedido -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductosPedido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"/>

    <!-- Total del Pedido -->
    <TextView
        android:id="@+id/tvTotalPedidoDetalle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total del Pedido"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:gravity="end"
        android:layout_marginTop="16dp"/>
</LinearLayout>
