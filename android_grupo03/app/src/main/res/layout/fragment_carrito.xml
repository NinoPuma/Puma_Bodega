<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/very_light_gray"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- ðŸ“Œ TÃ­tulo en la parte superior -->
    <TextView
        android:id="@+id/tituloTienda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/dark_gray"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:padding="16dp"
        android:text="Bienvenido a Carrito"
        android:textColor="@color/dark_yellow"
        android:textSize="24sp"
        android:textStyle="bold" />

    <!-- ðŸ“Œ RecyclerView para mostrar los productos del carrito -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="12dp"
        android:background="@color/dark_gray"
        android:elevation="4dp"
        android:clipToPadding="false"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"/>

    <!-- ðŸ“Œ BotÃ³n para vaciar todo el carrito -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnVaciarCarrito"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="VACIAR CARRITO"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:backgroundTint="@color/dark_red"
        android:elevation="6dp"
        android:textStyle="bold"/>

    <!-- ðŸ“Œ BotÃ³n para realizar el pedido -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_realizar_pedido"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="REALIZAR PEDIDO"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:backgroundTint="@color/dark_yellow"
        android:elevation="6dp"
        android:textStyle="bold"/>

</LinearLayout>