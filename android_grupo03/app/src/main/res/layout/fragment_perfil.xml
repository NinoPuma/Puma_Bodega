<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado del perfil -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="👤 Perfil"
                android:textColor="@color/yellow"
                android:textSize="28sp"
                android:textStyle="bold" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="@color/red"
                android:text="Cerrar Sesión"
                android:textColor="@color/white"
                android:padding="8dp"
                android:elevation="6dp"/>
        </RelativeLayout>

        <!-- Imagen de Perfil -->
        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:background="@color/dark_gray"
            android:padding="8dp"
            android:clipToOutline="true"/>

        <!-- Botón para Cambiar Foto -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar foto"
            android:backgroundTint="@color/yellow"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:elevation="6dp"/>

        <!-- Datos del Usuario -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:backgroundTint="@color/dark_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editarNombreUsuario"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editarDireccion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/cargarCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textSize="16sp"
                    android:textColor="@color/gray"
                    android:textStyle="italic"
                    android:padding="10dp"
                    android:enabled="false"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Código Postal">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editarCodigoPostal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"/>
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Botón Guardar Cambios -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/botonGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/yellow"
            android:text="Guardar cambios"
            android:textColor="@color/black"
            android:padding="12dp"
            android:elevation="6dp"/>
    </LinearLayout>
</ScrollView>