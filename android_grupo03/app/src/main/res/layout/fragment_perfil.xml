<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Encabezado del perfil -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <TextView
                android:id="@+id/perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:textColor="#388E3C"
                android:textSize="26sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/botonCerrarSesion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:backgroundTint="#D32F2F"
                android:text="Cerrar Sesión"
                android:textColor="#FFFFFF"
                android:padding="8dp"
                android:elevation="4dp"/>
        </RelativeLayout>

        <!-- Imagen de Perfil -->
        <ImageView
            android:id="@+id/fotoPerfil"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/ic_launcher"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"/>

        <!-- Botón para Cambiar Foto -->
        <Button
            android:id="@+id/botonFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cambiar foto"
            android:backgroundTint="#388E3C"
            android:textColor="#FFFFFF"
            android:layout_marginTop="8dp"
            android:elevation="4dp"/>

        <!-- Datos del Usuario -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:backgroundTint="#FAFAFA">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">



                <EditText
                    android:id="@+id/editarNombreUsuario"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Nombre de prueba"
                    android:padding="10dp"
                    android:textSize="16sp" />



                <EditText
                    android:id="@+id/editarDireccion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dirección de prueba"
                    android:padding="10dp"
                    android:textSize="16sp" />


                <TextView
                    android:id="@+id/cargarCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="correo@ejemplo.com"
                    android:textSize="16sp"
                    android:textColor="#555555"
                    android:textStyle="italic"
                    android:padding="10dp"

                    android:enabled="false"/>

                <EditText
                    android:id="@+id/editarCodigoPostal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Código Postal"
                    android:padding="10dp"
                    android:textSize="16sp" />


            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <!-- Botón Guardar Cambios -->
        <Button
            android:id="@+id/botonGuardarCambios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#388E3C"
            android:text="Guardar cambios"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:elevation="4dp"/>
    </LinearLayout>
</ScrollView>
