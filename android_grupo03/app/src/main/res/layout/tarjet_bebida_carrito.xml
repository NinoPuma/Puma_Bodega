<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:strokeColor="@color/dark_yellow"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- ðŸ“Œ Imagen del Producto -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivCarrito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ“Œ Contenedor de InformaciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tvNombreCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Licor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_yellow"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"/>

            <TextView
                android:id="@+id/tvPrecioCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$99.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"/>

            <!-- ðŸ“Œ Stepper (cantidad) -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:padding="6dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@color/dark_yellow"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Restar cantidad"
                    android:scaleType="fitCenter"/>

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="50dp"
                    android:layout_height="36dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/dark_gray"
                    android:background="@color/light_gray"
                    android:layout_marginHorizontal="8dp"/>

                <ImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="@color/dark_yellow"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Sumar cantidad"
                    android:scaleType="fitCenter"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
