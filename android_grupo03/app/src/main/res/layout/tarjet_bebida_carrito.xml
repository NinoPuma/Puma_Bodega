<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:strokeColor="@color/yellow"
    app:cardBackgroundColor="@color/dark_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- ðŸ“Œ Imagen del Producto con sombra -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/ivCarrito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:padding="6dp"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ“Œ Contenedor de InformaciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/tvNombreCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Licor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPrecioCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$99.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ“Œ Stepper -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@color/black"
                android:padding="6dp"
                android:gravity="center"
                android:elevation="6dp">

                <ImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/yellow"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Restar cantidad" />

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:text="1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:background="@color/black"
                    android:layout_marginHorizontal="8dp"/>

                <ImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@color/yellow"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Sumar cantidad" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ“Œ BotÃ³n de eliminar con efecto -->
        <ImageButton
            android:id="@+id/btnEliminarCarrito"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:padding="6dp"
            android:background="@color/red"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar producto"
            android:elevation="6dp"/>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>