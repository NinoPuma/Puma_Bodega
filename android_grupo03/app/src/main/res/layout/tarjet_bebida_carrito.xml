<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="10dp"
    app:strokeColor="@color/light_gray"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- ðŸ“Œ Imagen del Producto con sombra -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/ivCarrito"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@drawable/image_background"
                android:src="@drawable/whiskey_generico"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <!-- ðŸ“Œ Contenedor de InformaciÃ³n -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombreCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del Licor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:maxLines="1"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/tvPrecioCarrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$99.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:layout_marginTop="4dp"/>

            <!-- ðŸ“Œ Stepper -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:background="@drawable/stepper_background"
                android:padding="4dp"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/btnRestar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_minus"
                    android:contentDescription="Restar cantidad" />

                <TextView
                    android:id="@+id/tvCantidad"
                    android:layout_width="45dp"
                    android:layout_height="36dp"
                    android:text="1"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="@color/black"
                    android:background="@drawable/quantity_background"
                    android:layout_marginHorizontal="8dp"/>

                <ImageButton
                    android:id="@+id/btnSumar"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:src="@drawable/ic_plus"
                    android:contentDescription="Sumar cantidad" />
            </LinearLayout>
        </LinearLayout>

        <!-- ðŸ“Œ BotÃ³n de eliminar con efecto -->
        <ImageButton
            android:id="@+id/btnEliminarCarrito"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="6dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_delete"
            android:contentDescription="Eliminar producto" />
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
