<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/dark_gray"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 📌 Imagen de la bebida con bordes redondeados -->
        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="14dp"
            app:cardElevation="8dp">

            <ImageView
                android:id="@+id/ivBebida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:background="@color/black"
                android:padding="6dp"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <!-- 📌 Nombre de la bebida con estilo llamativo -->
            <TextView
                android:id="@+id/tvNombreBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🍷 Whiskey Premium"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/yellow"
                android:maxLines="1"
                android:ellipsize="end"/>

            <!-- 📌 Precio con color resaltado -->
            <TextView
                android:id="@+id/tvPrecioBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.99"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginTop="4dp"/>

            <!-- 📌 Descripción breve con color sutil -->
            <TextView
                android:id="@+id/tvDescripcionBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un delicioso whiskey con notas de vainilla y roble."
                android:textSize="14sp"
                android:textColor="@color/gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- 📌 Botón estilizado para añadir al carrito -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonAnadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Añadir al carrito 🛒"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/yellow"
                app:cornerRadius="12dp"
                android:layout_marginTop="10dp"
                android:elevation="6dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>