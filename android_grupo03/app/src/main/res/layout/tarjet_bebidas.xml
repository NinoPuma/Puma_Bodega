<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- 游늷 Imagen de la bebida -->
        <androidx.cardview.widget.CardView
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="6dp"
            android:background="@color/white">

            <ImageView
                android:id="@+id/ivBebida"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:clipToOutline="true"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <!-- 游늷 Nombre de la bebida -->
            <TextView
                android:id="@+id/tvNombreBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Whiskey Premium"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/dark_yellow"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="sans-serif-medium"/>

            <!-- 游늷 Precio -->
            <TextView
                android:id="@+id/tvPrecioBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$49.99"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/dark_gray"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif"/>

            <!-- 游늷 Descripci칩n breve -->
            <TextView
                android:id="@+id/tvDescripcionBebida"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Un delicioso whiskey con notas de vainilla y roble."
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <!-- 游늷 Bot칩n para a침adir al carrito -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonAnadir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A침adir al carrito"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:backgroundTint="@color/dark_yellow"
                app:cornerRadius="12dp"
                android:layout_marginTop="10dp"
                android:elevation="6dp"/>
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
